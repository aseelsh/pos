<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
  </style>
  
  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  	 <item name="android:editTextStyle">@style/editTextStyle</item>
  </style>
  
  <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">24sp</item>
	 <item name="background">@drawable/spinner_background</item>
    <item name="dropDownHorizontalOffset">0dip</item>
    <item name="dropDownWidth">wrap_content</item>
	 <item name="popupPromptView">@layout/simple_dropdown_hint</item>
  </style>
  
  <style name="editTextStyle" parent="@style/Widget.AppCompat.EditText">
	 <item name="android:textColor">@color/black</item>
	 <item name="android:background">@color/white</item>
  </style>
  
  <style name="PosButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:elevation">5dp</item>
    <item name="cornerRadius">3dp</item>
	 <item name="android:insetLeft">7dp</item>
	 <item name="android:insetTop">7dp</item>
	 <item name="android:insetRight">7dp</item>
	 <item name="android:insetBottom">7dp</item>
  </style>

  <style name="LoginButton" parent="Widget.MaterialComponents.Button.TextButton"> 
  	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/light_tint</item>
  </style>
  
  <style name="DialogCancel" parent="PosButton">
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/warn</item>
  </style>

  <style name="DialogContinue" parent="PosButton">
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_primary</item>
  </style>

  <style name="DialogSuccess" parent="PosButton">
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_success</item>
  </style>
  
  <style name="DialogWarn" parent="PosButton">	 
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/warn</item>
  </style>
  
  <style name="PosControlButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
  	 <item name="android:textColor">@color/white</item>
	 <item name="android:insetLeft">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="cornerRadius">5dp</item>
    <item name="strokeColor">@color/black</item>
  </style>

  <style name="SetupButton" parent="PosButton">	 
  	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/light_tint</item>
    <item name="android:elevation">0dp</item>
    <item name="cornerRadius">0dp</item>
	 <item name="android:insetLeft">0dp</item>
	 <item name="android:insetTop">0dp</item>
	 <item name="android:insetRight">0dp</item>
	 <item name="android:insetBottom">0dp</item>
  </style>

</resources>
