<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item> -->
  </style>
  
  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  	 <item name="android:editTextStyle">@style/editTextStyle</item>
  </style>

  <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
  </style>

  <!-- spinner -->
  
  <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
  </style>
  
  <style name="editTextStyle" parent="@style/Widget.AppCompat.EditText">
	 <item name="android:textColor">@color/black</item>
	 <item name="android:background">@color/white</item>
  </style>

  <!-- buttons -->
  
  <style name="PosButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:elevation">10dp</item>
    <item name="cornerRadius">5dp</item>
	 <item name="android:insetLeft">7dp</item>
	 <item name="android:insetTop">7dp</item>
	 <item name="android:insetRight">12dp</item>
	 <item name="android:insetBottom">12dp</item>
  </style>

  <style name="LoginButton" parent="Widget.MaterialComponents.Button.TextButton"> 
  	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/light_tint</item>
  </style>
  
  <style name="KeyboardButton" parent="Widget.MaterialComponents.Button.TextButton"> 
  	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/light_tint</item>
    <item name="textAllCaps">false</item>
  </style>
  
  <style name="DialogCancel" parent="PosButton">
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_danger</item>
  </style>

  <style name="DialogContinue" parent="PosButton">
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_primary</item>
  </style>

  <style name="DialogSuccess" parent="PosButton">
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_success</item>
  </style>
  
  <style name="DialogWarn" parent="PosButton">	 
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_warn</item>
  </style>
  
  <style name="DialogDanger" parent="PosButton">	 
	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/pos_danger</item>
  </style>
  
  <style name="PosControlButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
  	 <item name="android:textColor">@color/white</item>
	 <item name="android:insetLeft">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="cornerRadius">5dp</item>
    <item name="strokeColor">@color/black</item>
  </style>

  <style name="SetupButton" parent="PosButton">	 
  	 <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/light_tint</item>
    <item name="android:elevation">0dp</item>
    <item name="cornerRadius">0dp</item>
	 <item name="android:insetLeft">0dp</item>
	 <item name="android:insetTop">0dp</item>
	 <item name="android:insetRight">0dp</item>
	 <item name="android:insetBottom">0dp</item>
  </style>
  
  <style name="AppTheme.DatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
    <item name="android:calendarViewStyle">@style/date_picker_style</item>
  </style>

  <style name="date_picker_style">
    <item name="android:textSize">32sp</item>
  </style>

  <style name="time_picker_style">
    <item name="android:textSize">32sp</item>
  </style>

</resources>
