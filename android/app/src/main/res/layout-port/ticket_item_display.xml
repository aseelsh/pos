<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 xmlns:custom="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="@color/transparent"
	 android:orientation="vertical">
  
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1.3"
      android:background="@color/transparent"
		android:layout_marginTop="@dimen/ticket_margin_top"
		android:layout_marginRight="@dimen/ticket_margin"
		android:layout_marginLeft="@dimen/ticket_margin"
      android:orientation="horizontal">
	 
	 <cloud.multipos.pos.views.PosText
        android:id="@+id/ticket_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_gravity="end"
        android:background="@color/transparent"
        android:text=""
        android:gravity="left|center_horizontal"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="@dimen/ticket_message_text" />
	 
  </LinearLayout>
  
  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:layout_marginRight="@dimen/ticket_margin"
		android:layout_marginLeft="@dimen/ticket_margin"
		android:background="@android:color/black"/>

  <LinearLayout
      android:id="@+id/list_display"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="6"
      android:background="@color/transparent"
      android:orientation="vertical"
      android:padding="10dp"
      android:textColor="@android:color/background_dark"/>

  <LinearLayout
      android:id="@+id/ticket_item_summary"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:orientation="horizontal"
		android:background="@android:color/transparent">

	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/summary_subtotal_text"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="bottom"
		  android:textAlignment="viewStart"
		  android:background="@color/transparent"
		  android:text="@string/sub_total"
		  android:textColor="@color/black"
		  android:textSize="24sp" />

	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/summary_subtotal"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="bottom"
		  android:layout_marginEnd="30dp"
		  android:textAlignment="viewEnd"
		  android:background="@color/transparent"
		  android:text=""
		  android:textColor="@color/black"
		  android:textSize="30sp" />

	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/summary_tax_text"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="bottom"
		  android:textAlignment="viewStart"
		  android:background="@color/transparent"
		  android:text="@string/tax"
		  android:textColor="@color/black"
		  android:textSize="24sp" />

	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/summary_tax"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="bottom"
		  android:layout_marginEnd="30dp"
		  android:textAlignment="viewEnd"
		  android:background="@color/transparent"
		  android:text=""
		  android:textColor="@color/black"
		  android:textSize="30sp" />

	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/summary_total_text"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="bottom"
		  android:textAlignment="viewStart"
		  android:background="@color/transparent"
		  android:text="@string/total"
		  android:textColor="@color/black"
		  android:textSize="24sp" />

	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/summary_total"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="bottom"
		  android:background="@color/transparent"
		  android:text=""
		  android:textAlignment="viewEnd"
		  android:textColor="@color/black"
		  android:textSize="30sp" />

  </LinearLayout>

  <LinearLayout
		android:id="@+id/ticket_input_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:background="@android:color/black" />
  
  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/transparent"
		android:orientation="horizontal">
	 
    <cloud.multipos.pos.views.PosText
		  android:id="@+id/ticket_input_prompt"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1.2"
		  android:layout_margin="10dp"
		  android:background="@color/transparent"
		  android:paddingRight="10dp"
		  android:paddingLeft="10dp"
		  android:text="@string/input"
		  android:textAlignment="viewStart"
		  android:layout_gravity="bottom|start"
		  android:gravity="bottom"
		  android:textColor="@color/black"
		  android:textSize="24sp" />
	 
    <cloud.multipos.pos.views.PosText
		  android:id="@+id/ticket_input_decimal"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="3"
		  android:layout_gravity="bottom|end"
		  android:layout_margin="10dp"
		  android:background="@color/transparent"
		  android:paddingRight="10dp"
		  android:paddingLeft="10dp"
		  android:text=""
		  android:textAlignment="viewEnd"
		  android:textColor="@color/black"
		  android:textSize="30sp" />
	 
    <cloud.multipos.pos.views.PosText
		  android:id="@+id/ticket_input"
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="3"
		  android:layout_gravity="bottom|end"
		  android:layout_margin="10dp"
		  android:background="@color/transparent"
		  android:paddingRight="10dp"
		  android:paddingLeft="10dp"
		  android:text=""
		  android:textAlignment="viewEnd"
		  android:textColor="@color/black"
		  android:textSize="30sp" />
	 
  </LinearLayout>
  
  <LinearLayout
      android:layout_width="match_parent"
		android:layout_weight="6"
      android:layout_height="0dp"
      android:orientation="vertical">
	 
	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="92dp"
		  android:orientation="horizontal">
		
		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_7"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="7"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_8"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="8"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_9"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="9"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_qty"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="@string/enter_quantity"
			 android:textSize="24sp" />

	 </LinearLayout>

	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="92dp"
		  android:orientation="horizontal">

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_4"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="4"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_5"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="5"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_6"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="6"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_qty_up"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="@string/quantity_up"
			 android:textSize="24sp" />

	 </LinearLayout>

	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="92dp"
		  android:orientation="horizontal">

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_1"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="1"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_2"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="2"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_3"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="3"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_qty_down"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="@string/quantity_down"
			 android:textSize="24sp" />

	 </LinearLayout>

	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="95dp"
		  android:orientation="horizontal">

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_del"
 			 style="@style/KeypadButton"
			 android:text="@string/fa_del"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:textSize="40sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_button_0"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="0"
			 android:textSize="36sp" />

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_zero_zero"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="00"
			 android:textSize="40sp" />
		
		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/ticket_enter"
 			 style="@style/KeypadButton"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_margin="5dp"
			 android:layout_weight="1"
			 android:text="@string/enter"
			 android:textSize="24sp" />
		
	 </LinearLayout>
	 
  </LinearLayout>
  
</LinearLayout>

