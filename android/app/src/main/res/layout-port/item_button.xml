<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="50dp"
    android:background="@color/transparent"
	 android:clickable="true"
	 android:layout_marginLeft="2dp"
	 android:layout_marginTop="2dp">

  <com.google.android.material.button.MaterialButton
		android:id="@+id/item_button"
		style="@style/DialogContinue"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
 		android:text=""
 		android:textSize="@dimen/menu_button_text"
		android:gravity="left|top"
		android:clickable="true"
		android:paddingLeft="@dimen/menu_button_padding_start"
		android:paddingTop="@dimen/menu_button_padding_top"
		android:paddingRight="@dimen/menu_button_padding_end"
		android:paddingBottom="@dimen/menu_button_padding_bottom"
		android:textColor="@color/white"/>
  
</LinearLayout>
