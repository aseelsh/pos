<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 xmlns:custom="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="@color/transparent"
	 android:orientation="vertical">
  
  <cloud.multipos.pos.views.PosText
      android:id="@+id/login_input"
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
      android:background="@color/white"
      android:gravity="center_vertical|center_horizontal"
      android:hint="@string/cashier_number"
      android:textSize="@dimen/login_input_text"/>

  <cloud.multipos.pos.views.PosButton
      android:id="@+id/login_button"
		style="@style/LoginButton"
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:layout_marginTop="@dimen/login_button_margin"
		android:text="@string/next"
      android:gravity="center_vertical|center_horizontal"
		android:textSize="@dimen/login_button_text"/>

  <LinearLayout
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">
	 
	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_7"
		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
        android:text="7"
        android:textSize="@dimen/login_button_text"/>
	 
	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_8"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
 		  android:layout_marginRight="@dimen/login_button_margin"
		  android:layout_marginLeft="@dimen/login_button_margin"
        android:text="8"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_9"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
        android:layout_width="0dp"
		  android:layout_weight="1"
        android:text="9"
        android:textSize="@dimen/login_button_text"/>

  </LinearLayout>

  <LinearLayout
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">
	 
	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_4"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:layout_width="0dp"
        android:text="4"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_5"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
 		  android:layout_weight="1"
 		  android:layout_marginRight="@dimen/login_button_margin"
		  android:layout_marginLeft="@dimen/login_button_margin"
        android:text="5"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_6"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
 		  android:layout_weight="1"
        android:text="6"
        android:textSize="@dimen/login_button_text"/>
	 
  </LinearLayout>

  <LinearLayout
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">
	 
	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_1"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
  		  android:layout_weight="1"
        android:text="1"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_2"
 		  style="@style/LoginButton"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
   	  android:layout_weight="1"
 		  android:layout_marginRight="@dimen/login_button_margin"
		  android:layout_marginLeft="@dimen/login_button_margin"
        android:text="2"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_3"
 		  style="@style/LoginButton"
 		  android:layout_height="match_parent"
        android:layout_width="0dp"
    	  android:layout_weight="1"
		  android:text="3"
        android:textSize="@dimen/login_button_text"/>

  </LinearLayout>

  <LinearLayout
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
      android:background="@color/transparent"
		android:orientation="horizontal">
	 
	 <LinearLayout
		  android:layout_height="match_parent"
        android:layout_width="0dp"
	 	  android:layout_weight="1"/>
	 
	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/login_button_0"
 		  style="@style/LoginButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
   	  android:layout_weight="1"
 		  android:layout_marginRight="@dimen/login_button_margin"
		  android:layout_marginLeft="@dimen/login_button_margin"
        android:text="0"
        android:textSize="@dimen/login_button_text"/>
	 
	 <cloud.multipos.pos.views.PosIconButton
        android:id="@+id/login_del"
 		  style="@style/LoginButton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
   	  android:layout_weight="1"
        android:background="@color/transparent"
		  android:textColor="@color/white"
        android:text="@string/fa_del"
        android:textSize="@dimen/login_button_lg_text"/>
	 
  </LinearLayout>
  
  <LinearLayout
      android:id="@+id/login_overlay"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/pos_app_bg"
		android:visibility="gone"
		android:padding="@dimen/login_spinner_padding"
		android:clickable="false"
		android:orientation="vertical">
	 
    <cloud.multipos.pos.views.PosIconText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
		  android:text="@string/fa_clock"
		  android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/login_button_xlg_text"
 		  android:gravity="center_horizontal|center_vertical"/>
	 
    <cloud.multipos.pos.views.PosText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
		  android:text="@string/please_wait"
		  android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/login_button_xlg_text"
 		  android:gravity="center_horizontal|center_vertical"/>
	 
	 </LinearLayout>
	 
</LinearLayout>
