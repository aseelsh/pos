<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	 android:padding="@dimen/ticket_item_padding"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/inventory_item_layout"
 		android:clickable="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/transparent"
		android:layout_marginLeft="@dimen/ticket_item_margin"
		android:layout_marginRight="@dimen/ticket_item_margin"
      android:orientation="horizontal">

	 <cloud.multipos.pos.views.PosText
 		  android:clickable="false"
        android:id="@+id/inventory_item_line_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="start"
        android:text=""
		  android:textColor="@color/black"
 		  android:padding="5dp"
        android:textSize="@dimen/inventory_md_text"/>

    <cloud.multipos.pos.views.PosText
 		  android:clickable="false"
        android:id="@+id/inventory_item_line_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:text=""
		  android:textColor="@color/black"
 		  android:padding="5dp"
        android:textSize="@dimen/inventory_md_text"/>

    
    <cloud.multipos.pos.views.PosText
 		  android:clickable="false"
        android:id="@+id/inventory_item_line_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:text=""
		  android:textColor="@color/black"
  		  android:padding="5dp"
        android:textSize="@dimen/inventory_md_text"/>
	 
  </LinearLayout>
  
</LinearLayout>
