<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
 	 xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/tables_button_width"
    android:layout_height="match_parent"
    android:background="@drawable/table_button"
	 android:orientation="vertical"
    android:padding="@dimen/dialog_md_padding">

  <cloud.multipos.pos.views.PosText
      android:id="@+id/table_text"
      android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/transparent"
      android:textColor="@color/black"
      android:text=""
		android:padding="@dimen/dialog_sm_padding"
      android:textSize="@dimen/dialog_md_text"
		android:clickable="true"/>
  
  <cloud.multipos.pos.views.PosText
      android:id="@+id/table_detail_text"
      android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/transparent"
      android:textColor="@color/black"
      android:text=""
		android:paddingLeft="@dimen/dialog_lg_padding"
      android:textSize="@dimen/dialog_sm_text"/>

</LinearLayout>
