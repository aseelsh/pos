<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

  <cloud.multipos.pos.views.PosText
      android:id="@+id/scale_title"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dialog_header_height"
      android:gravity="center"
      android:text=""
      android:background="@color/transparent"
		android:textColor="@color/white"
      android:textSize="@dimen/dialog_lg_text"
		android:layout_marginTop="@dimen/dialog_margin"
		android:padding="@dimen/dialog_padding"
      app:layout_constraintTop_toTopOf="parent"/>
  
  <cloud.multipos.pos.views.PosText 
      android:id="@+id/scale_echo"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:text="0.0"
      android:gravity="center_vertical|center_horizontal"
      android:background="@color/transparent"
		android:textColor="@color/black"
      android:textSize="@dimen/dialog_xlg_text"
		android:layout_marginTop="@dimen/dialog_margin"
		android:padding="@dimen/dialog_padding"
      app:layout_constraintTop_toBottomOf="@+id/scale_title"
      app:layout_constraintBottom_toTopOf="@+id/scale_accept_weight"/>
  
</androidx.constraintlayout.widget.ConstraintLayout>
