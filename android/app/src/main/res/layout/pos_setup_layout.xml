<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  xmlns:app="http://schemas.android.com/apk/res-auto"
				  xmlns:tools="http://schemas.android.com/tools"
				  xmlns:custom="http://schemas.android.com/apk/res-auto"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:background="@color/transparent"
				  android:gravity="center_horizontal"
				  android:orientation="vertical"
				  android:layout_margin="@dimen/pos_setup_margin">

  <ImageView
      android:id="@+id/login_company"
      android:layout_width="match_parent"
      android:layout_height="@dimen/pos_setup_header"
      android:gravity="left"
      android:src="@drawable/app_logo"
		android:layout_margin="@dimen/pos_setup_margin"/>
  
  <LinearLayout
      android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
      android:orientation="horizontal">
	 
	 <cloud.multipos.pos.views.PosText
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:text="@string/select_location"
		  android:gravity="center"
		  android:textColor="@color/white"
 		  android:background="@color/transparent"
		  android:clickable="true"
		  android:textSize="@dimen/pos_setup_md_text"/>
	 
	 <cloud.multipos.pos.views.PosText
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:text="@string/select_config"
		  android:gravity="center"
		  android:textColor="@color/white"
		  android:background="@color/transparent"
		  android:clickable="true"
		  android:textSize="@dimen/pos_setup_md_text"/>
	 
	 <cloud.multipos.pos.views.PosText
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:text="@string/download_store"
		  android:gravity="center"
		  android:textColor="@color/white"
		  android:background="@color/transparent"
		  android:textSize="@dimen/pos_setup_md_text"/>
  </LinearLayout>
  
  <LinearLayout
 		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="5"
      android:orientation="horizontal">
	 
	 <ScrollView
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:background="@color/transparent">
		
		<GridLayout 
			 android:id="@+id/pos_setup_locations"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:columnCount="1"
			 android:background="@color/transparent"/>
		
	 </ScrollView>
	 	 
	 <ScrollView
		  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:background="@color/transparent">
		
		<GridLayout 
			 android:id="@+id/pos_setup_configs"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:columnCount="1"
			 android:background="@color/transparent"/>
		
	 </ScrollView>

	 <LinearLayout
	 	  android:layout_width="0dp"
		  android:layout_height="match_parent"
		  android:layout_weight="1"
		  android:gravity="center|center_vertical">
	 
 		<cloud.multipos.pos.views.PosIconButton
			 android:id="@+id/pos_setup_register"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:text="@string/fa_cloud_download"
			 android:gravity="center_horizontal"
			 android:textColor="@color/white"
			 android:background="@color/transparent"
			 android:textSize="@dimen/pos_setup_xlg_text"/>
		
	 </LinearLayout>
  
  </LinearLayout>
  
</LinearLayout>
