<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_actions"		
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	 android:orientation="horizontal"
    android:background="@color/transparent">

  <cloud.multipos.pos.views.PosButton
		android:id="@+id/instant_loyalty_search"
		style="@style/DialogSuccess"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="@dimen/dialog_footer_height"
 		android:text="@string/search_customer"
		android:layout_gravity="center"
      android:textSize="@dimen/dialog_md_text"
		android:layout_margin="@dimen/dialog_margin"
      app:layout_constraintBottom_toBottomOf="parent"/>

  <cloud.multipos.pos.views.PosButton
      android:id="@+id/instant_loyalty_continue"
 		style="@style/DialogContinue"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="@dimen/dialog_footer_height"
 		android:text="@string/instant_loyalty"
		android:layout_gravity="center"
      android:textSize="@dimen/dialog_md_text"
		android:layout_margin="@dimen/dialog_margin"
      app:layout_constraintBottom_toBottomOf="parent"/>
</LinearLayout>
