<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
 	 android:layout_margin="@dimen/dialog_margin"
    android:gravity="center_horizontal">
  
  <cloud.multipos.pos.views.PosText
      android:id="@+id/number_input_prompt"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dialog_header_height"
      android:background="@color/transparent"
 		style="@style/DialogContinue"
      android:textColor="@color/black"
      android:textSize="@dimen/dialog_md_text"
      android:gravity="center_vertical|center_horizontal"
		android:layout_margin="@dimen/dialog_margin"
		android:padding="@dimen/dialog_padding"
 		app:layout_constraintTop_toBottomOf="@+id/number_input_header"/>

  <!-- first input on the screen captures key strokes -->

  <cloud.multipos.pos.views.PosText
      android:id="@+id/number_input_echo"
      android:layout_width="match_parent"
		android:layout_height="@dimen/dialog_header_height"
      android:background="@drawable/pos_input"
      android:gravity="center_vertical|center_horizontal"
      android:textColor="@color/black"
		android:textSize="@dimen/dialog_xlg_text"
		android:layout_margin="@dimen/dialog_margin"
 		app:layout_constraintTop_toBottomOf="@+id/number_input_prompt"/>
  
</androidx.constraintlayout.widget.ConstraintLayout>
