<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket_select"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
	 android:layout_margin="@dimen/app_md_margin"
	 android:padding="@dimen/app_sm_padding"
    android:orientation="horizontal">

  <cloud.multipos.pos.views.PosText
 		android:clickable="false"
      android:id="@+id/ticket_no"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="start"
      android:text=""
		android:textColor="@color/black"
      android:textSize="@dimen/app_md_text"/>
	 
  <cloud.multipos.pos.views.PosText
 		android:clickable="false"
      android:id="@+id/ticket_date"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1.5"
      android:gravity="start"
      android:text=""
		android:textColor="@color/black"
      android:textSize="@dimen/app_md_text"/>
	  
  <cloud.multipos.pos.views.PosText
 		android:clickable="false"
      android:id="@+id/ticket_total"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="end"
      android:text=""
		android:textColor="@color/black"
      android:textSize="@dimen/app_md_text"/>
  
  <cloud.multipos.pos.views.PosText
 		android:clickable="false"
      android:id="@+id/ticket_tip"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="end"
      android:text=""
		android:textStyle="bold"
		android:textColor="@color/black"
      android:textSize="@dimen/app_lg_text"/>

</LinearLayout>
