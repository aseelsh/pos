<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 xmlns:custom="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="@color/white"
	 android:orientation="horizontal">
  
  <LinearLayout
		android:layout_height="match_parent"
		android:layout_width="0dp"
		android:layout_weight="3"
		android:orientation="vertical">
	 
	 <LinearLayout
		  android:layout_height="0dp"
		  android:layout_width="match_parent"
		  android:layout_weight="1"
		  android:orientation="horizontal">
		
		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_1"
			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:paddingBottom="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="1"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_2"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:paddingBottom="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="2"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_3"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:paddingBottom="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="3"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>
		
	 </LinearLayout>
	 
	 <LinearLayout
		  android:layout_height="0dp"
		  android:layout_width="match_parent"
		  android:layout_weight="1"
		  android:orientation="horizontal">
		
		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_4"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="4"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_5"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="5"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_6"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="6"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>
		
	 </LinearLayout>

	 <LinearLayout
		  android:layout_height="0dp"
		  android:layout_width="match_parent"
		  android:layout_weight="1"
		  android:orientation="horizontal">
		
		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_7"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="7"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_8"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="8"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_9"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="0dp"
			 android:layout_weight="1"
			 android:text="9"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>

	 </LinearLayout>

	 <LinearLayout
		  android:layout_height="0dp"
		  android:layout_width="match_parent"
		  android:layout_weight="1"
		  android:orientation="horizontal">
		
		<cloud.multipos.pos.views.PosButton
			 android:id="@+id/keyboard_0"
 			 style="@style/KeyboardButtonDark"
			 android:layout_margin="@dimen/keyboard_margin"
			 android:layout_height="85dp"
			 android:layout_width="match_parent"
			 android:text="0"
			 android:textStyle="bold"
			 android:textSize="@dimen/keyboard_lg_text"/>
		
	 </LinearLayout>
	 
  </LinearLayout>
  
  <LinearLayout
		android:layout_height="match_parent"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_marginTop="@dimen/keyboard_margin"
		android:orientation="vertical">
	 
	 <cloud.multipos.pos.views.PosIconButton
		  android:id="@+id/keyboard_del"
		  style="@style/KeyboardButtonDark"
		  android:layout_height="132dp"
		  android:layout_width="match_parent"
		  android:textStyle="bold"
		  android:text="@string/fa_del"
		  android:textSize="@dimen/keyboard_lg_text"/>
	 
	 <cloud.multipos.pos.views.PosIconButton
		  android:id="@+id/keyboard_enter"
		  style="@style/KeyboardButtonDark"
		  android:layout_height="132dp"
		  android:layout_width="match_parent"
		  android:text="@string/fa_enter"
		  android:layout_marginTop="-5dp"
		  android:textStyle="bold"
		  android:textSize="@dimen/keyboard_lg_text"/>
	 
  </LinearLayout>

</LinearLayout>
