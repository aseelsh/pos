<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:gravity="start"
    android:orientation="vertical">

  <cloud.multipos.pos.views.PosAppBar
      android:id="@+id/pos_app_bar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/activity_main_app_bar_height"
      android:background="@color/pos_bg"
      android:layout_gravity="fill_horizontal"
      android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      custom:icon_size="@dimen/app_bar_icon_size"
      custom:icon_padding="@dimen/app_bar_icon_padding"/>

  <GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/transparent"
		android:columnCount="4">
	 
	 <cloud.multipos.pos.views.PosText
		  android:id="@+id/inventory_sku"
		  android:gravity="top|end"
		  android:text=""
		  android:layout_columnWeight="1"
		  android:layout_columnSpan="2"
        android:layout_gravity="fill" 
 		  android:hint="@string/integer_hint"
		  android:textAlignment="viewEnd"
		  android:textColor="@color/black"
		  android:layout_margin="@dimen/ticket_margin"
		  android:textSize="@dimen/inventory_lg_text"/>

    <cloud.multipos.pos.views.PosText
		  android:id="@+id/inventory_item_desc"
		  android:gravity="top|end"
		  android:text=""
		  android:layout_columnWeight="1"
		  android:layout_columnSpan="2"
        android:layout_gravity="fill" 
		  android:hint="@string/decimal_hint"
		  android:textAlignment="viewEnd"
		  android:textColor="@color/black"
		  android:layout_margin="@dimen/ticket_margin"
		  android:textSize="@dimen/inventory_lg_text"/>
	 
	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_7"
		  android:layout_width="wrap_content"
 		  style="@style/KeypadButton"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="7"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_8"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="8"
		  android:layout_columnWeight="1"
		  android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_9"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="9"
		  android:layout_columnWeight="1"
		  android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_qty"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="@string/quantity"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_4"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="4"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_5"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="5"
		  android:layout_columnWeight="1"
		  android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_6"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="6"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_qty_up"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="@string/quantity_up"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>
	 
	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_1"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="1"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_2"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="2"
		  android:layout_columnWeight="1"
		  android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_3"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="3"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_qty_down"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="@string/quantity_down"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill"
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosIconButton
		  android:id="@+id/inventory_del"
 		  style="@style/KeypadButton"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="@string/fa_del"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_lg_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_button_0"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="0"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_zero_zero"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="00"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>
	 
	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/inventory_enter"
 		  style="@style/KeypadButton"
		  android:layout_width="wrap_content"
		  android:layout_height="@dimen/inventory_button_height"
		  android:text="@string/enter"
		  android:layout_columnWeight="1"
        android:layout_gravity="fill" 
		  android:textSize="@dimen/inventory_md_text"/>


  </GridLayout>

</LinearLayout>
