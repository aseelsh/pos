<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
	 xmlns:custom="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="@color/transparent"
	 android:orientation="vertical">

  <cloud.multipos.pos.views.PosButton
		android:id="@+id/edit_complete"
		style="@style/DialogContinue"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:text="@string/edit_complete"
		android:textColor="@color/white"
		android:textSize="@dimen/dialog_lg_text"
		android:layout_margin="@dimen/dialog_margin"/>

  <cloud.multipos.pos.views.PosButton
		android:id="@+id/edit_reset"
		style="@style/DialogDanger"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:text="@string/edit_reset"
		android:textColor="@color/white"
		android:textSize="@dimen/dialog_lg_text"
		android:layout_margin="@dimen/dialog_margin"/>

  <cloud.multipos.pos.views.PosButton
		android:id="@+id/edit_cancel"
		style="@style/DialogWarn"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:text="@string/edit_cancel"
		android:textColor="@color/white"
		android:textSize="@dimen/dialog_lg_text"
		android:layout_margin="@dimen/dialog_margin"/>

</LinearLayout>
