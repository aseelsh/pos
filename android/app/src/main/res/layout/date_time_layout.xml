<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/match_parent"
    android:layout_height="@dimen/match_parent"
    android:background="@drawable/transparent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
		android:orientation="vertical"
      app:layout_constraintTop_toBottomOf="@+id/date_time_title"
      app:layout_constraintBottom_toTopOf="@+id/date_time_accept">

  <DatePicker
        android:id="@+id/date_picker"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
		  android:theme="@style/date_picker_style"
		  android:datePickerMode="spinner"
		  android:calendarViewShown="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/transparent"
		  android:layout_marginTop="@dimen/dialog_margin"
		  android:padding="@dimen/dialog_padding"/>
	 
	 <TimePicker
        android:id="@+id/time_picker"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
		  android:timePickerMode="spinner"
		  android:theme="@style/time_picker_style"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/transparent"
		  android:layout_marginTop="@dimen/dialog_margin"
		  android:padding="@dimen/dialog_padding"/>
	 
  </LinearLayout>


  
</androidx.constraintlayout.widget.ConstraintLayout>
