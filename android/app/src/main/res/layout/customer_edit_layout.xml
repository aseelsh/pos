	 <!-- fname -->
	 
	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_weight="1"
		  android:background="@color/transparent"
		  android:layout_marginBottom="@dimen/dialog_sm_margin"
		  android:orientation="horizontal">

		<cloud.multipos.pos.views.PosThemeText
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_weight=".5"
			 android:gravity="start|center"
			 android:text="@string/customer_fname"
			 android:textSize="@dimen/dialog_md_text"
			 android:textColor="@color/black"
			 android:background="@color/transparent"/>

		<cloud.multipos.pos.views.PosEditText
			 android:id="@+id/customer_fname"
			 android:clickable="true"
			 android:layout_width="0dp"
			 android:layout_height="match_parent"
			 android:layout_weight="1"
			 android:gravity="start|center"
			 android:text=""
			 android:textSize="@dimen/dialog_md_text"
			 android:padding="@dimen/dialog_sm_padding"
			 android:textColor="@color/dk_gray"
			 android:background="@drawable/gray_border"/>
		
	 </LinearLayout>
	 
	 <!-- lname -->

	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_weight="1"
		  android:background="@color/transparent"
		  android:layout_marginBottom="@dimen/dialog_sm_margin"
