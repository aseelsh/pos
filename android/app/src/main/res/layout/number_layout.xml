<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

  <cloud.multipos.pos.views.PosText
      android:id="@+id/number_title"
      android:layout_width="match_parent"
		android:layout_height="@dimen/dialog_header_height"
		android:background="@color/pos_bg"
      android:layout_margin="@dimen/keypad_lg_margin"
      android:gravity="center_vertical|center_horizontal"
      android:textColor="@color/white"
      android:textSize="@dimen/dialog_lg_text"
  		app:layout_constraintTop_toTopOf="parent"/>

  <cloud.multipos.pos.views.PosText
      android:id="@+id/number_input"
      android:layout_width="match_parent"
		android:layout_height="@dimen/dialog_header_height"
      android:layout_margin="@dimen/keypad_lg_margin"
      android:background="@drawable/pos_input"
      android:gravity="center_vertical|center_horizontal"
      android:textColor="@color/black"
      android:textSize="@dimen/dialog_lg_text"
  		app:layout_constraintTop_toBottomOf="@+id/number_title"/>

  <GridLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:custom="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/transparent"
		android:columnCount="3">

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_7"
		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="7"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_8"
 		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
		  android:text="8"
		  android:layout_marginLeft="15dp"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_9"
 		  style="@style/LoginButton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
		  android:text="9"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_4"
 		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="4"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_5"
 		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="5"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_6"
 		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="6"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_1"
 		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="1"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_2"
 		  style="@style/LoginButton"
		  android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="2"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_3"
 		  style="@style/LoginButton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="3"
        android:textSize="@dimen/login_button_text"/>

	 <LinearLayout
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>
	 
	 <cloud.multipos.pos.views.PosButton
        android:id="@+id/number_button_0"
 		  style="@style/LoginButton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:text="0"
        android:textSize="@dimen/login_button_text"/>

	 <cloud.multipos.pos.views.PosIconButton
        android:id="@+id/number_del"
 		  style="@style/LoginButton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="fill"
        android:background="@color/transparent"
		  android:textColor="@color/white"
        android:text="@string/fa_del"
        android:textSize="@dimen/login_del_text"/>

	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/number_opt"
 		  style="@style/KeypadButton"
		  android:text="00"
		  android:textSize="@dimen/keypad_lg_text"
        android:layout_gravity="fill" 
		  android:layout_rowWeight="1"
		  android:layout_columnWeight="1"/>
	 
	 <cloud.multipos.pos.views.PosButton
		  android:id="@+id/number_enter"
 		  style="@style/KeypadButton"
		  android:text="@string/enter"
		  android:textSize="@dimen/keypad_lg_text"
        android:layout_gravity="fill" 
		  android:layout_rowWeight="1"
        android:layout_columnSpan="3"
		  android:layout_columnWeight="3"/>

  </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
