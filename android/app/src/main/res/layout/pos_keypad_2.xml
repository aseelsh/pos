<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 xmlns:custom="http://schemas.android.com/apk/res-auto"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="@color/transparent"
	 android:orientation="vertical">
  
  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/transparent"
		android:orientation="horizontal">
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_7"
 		  style="@style/KeypadButton"
		  android:text="7"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_8"
 		  style="@style/KeypadButton"
		  android:text="8"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_9"
 		  style="@style/KeypadButton"
		  android:text="9"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_qty"
 		  style="@style/KeypadButton"
		  android:text="@string/quantity"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_xsm_text"/>
	 
  </LinearLayout>

  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/transparent"
		android:orientation="horizontal">
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_4"
 		  style="@style/KeypadButton"
		  android:text="4"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_5"
 		  style="@style/KeypadButton"
		  android:text="5"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_6"
 		  style="@style/KeypadButton"
		  android:text="6"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_qty_up"
 		  style="@style/KeypadButton"
		  android:text="@string/quantity_up"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>
	 
  </LinearLayout>
  
  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/transparent"
		android:orientation="horizontal">
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_1"
 		  style="@style/KeypadButton"
		  android:text="1"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_2"
 		  style="@style/KeypadButton"
		  android:text="2"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_3"
 		  style="@style/KeypadButton"
		  android:text="3"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_qty_down"
 		  style="@style/KeypadButton"
		  android:text="@string/quantity_down"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

  </LinearLayout>
  
  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/transparent"
		android:orientation="horizontal">
	 
	 <cloud.multipos.pos.views.PosIconButton
		  android:id="@+id/keypad_del"
 		  style="@style/KeypadButton"
		  android:text="@string/fa_del"
		  android:gravity="center"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_xlg_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_button_0"
 		  style="@style/KeypadButton"
		  android:text="0"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>

	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_zero_zero"
 		  style="@style/KeypadButton"
		  android:text="00"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_md_text"/>
	 
	 <com.google.android.material.button.MaterialButton
		  android:id="@+id/keypad_enter"
 		  style="@style/KeypadButton"
		  android:text="@string/enter"
		  android:layout_height="match_parent"
		  android:layout_width="0dp"
		  android:layout_weight="1"
		  android:textSize="@dimen/keypad_xsm_text"/>
	 
  </LinearLayout>

</LinearLayout>
