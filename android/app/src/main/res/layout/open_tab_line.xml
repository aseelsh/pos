<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 android:id="@+id/open_tab_layout"
    android:layout_width="match_parent"
 	 android:layout_height="wrap_content"
	 android:clickable="true"
	 android:orientation="horizontal"
	 android:elevation="3dp"
	 android:paddingTop="12dp"
	 android:paddingBottom="12dp"
    android:background="@drawable/button_border">
  
  <cloud.multipos.pos.views.PosText
		android:id="@+id/open_tab_no"
		android:layout_height="wrap_content"
 		android:layout_width="0dp"
 		android:layout_weight="1"
		android:clickable="false"
		android:text=""
 		android:textSize="@dimen/tabs_button_lg_text"
		android:background="@color/transparent"
		android:textColor="@color/black"
		android:gravity="start"/>
  
  <cloud.multipos.pos.views.PosText
		android:id="@+id/open_tab_start"
		android:layout_height="wrap_content"
 		android:layout_width="0dp"
 		android:layout_weight="1"
		android:clickable="false"
		android:text=""
 		android:textSize="@dimen/tabs_button_lg_text"
		android:background="@color/transparent"
		android:textColor="@color/black"
		android:gravity="start"/>

  <cloud.multipos.pos.views.PosText
		android:id="@+id/open_tab_items"
		android:layout_height="wrap_content"
 		android:layout_width="0dp"
 		android:layout_weight="1"
		android:clickable="false"
		android:text=""
 		android:textSize="@dimen/tabs_button_lg_text"
		android:background="@color/transparent"
		android:textColor="@color/black"
		android:gravity="end"/>

  <cloud.multipos.pos.views.PosText
		android:id="@+id/open_tab_total"
		android:layout_height="wrap_content"
 		android:layout_width="0dp"
 		android:layout_weight="1"
		android:clickable="false"
		android:text=""
 		android:textSize="@dimen/tabs_button_lg_text"
		android:background="@color/transparent"
		android:textColor="@color/black"
		android:gravity="end"/>
  
</LinearLayout>
