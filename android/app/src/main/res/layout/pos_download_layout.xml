<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  xmlns:tools="http://schemas.android.com/tools"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  xmlns:app="http://schemas.android.com/apk/res-auto"
				  android:gravity="center_horizontal"
				  android:padding="@dimen/activity_main_padding"
				  android:background="@color/pos_app_bg"
				  tools:context=".MainActivity"
				  android:orientation="horizontal">

  <LinearLayout
		android:layout_width="@dimen/register_margin_left"
		android:layout_height="match_parent"
		android:background="@color/pos_app_bg" />

  <LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center|center_vertical"
		android:background="@color/pos_app_bg"
		android:layout_marginTop="@dimen/register_margin_top"
		android:orientation="vertical">

	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		  android:layout_weight="2"/>
 	 
    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
		  android:layout_weight="1"
        android:layout_marginTop="@dimen/register_margin_top"
        android:layout_centerHorizontal="true"
 		  android:gravity="center|center_vertical"
		  android:text="@string/initialize_device"
        android:textColor="@android:color/white"
        android:textSize="@dimen/register_lg_text" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
		  android:layout_weight="1"
        android:layout_centerHorizontal="true"
 		  android:gravity="center|center_vertical"
        android:layout_marginTop="@dimen/register_margin_top"/>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:text=""
 		  android:gravity="center|center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/register_lg_text" />
	 
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
		  android:layout_weight="2"/>
 	 
  </LinearLayout>

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/transparent"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/login_company"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/register_margin"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:src="@drawable/app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/register_margin_top"
        android:layout_weight="1"
        android:gravity="right|bottom"
        android:text="@string/app_version"
        android:textColor="@color/white"
        android:textSize="@dimen/register_sm_text" />

  </LinearLayout>

</LinearLayout>
