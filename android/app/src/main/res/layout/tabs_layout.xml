<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
 	 android:layout_margin="@dimen/dialog_padding"
    android:gravity="center_horizontal">

  <cloud.multipos.pos.views.PosText
      android:id="@+id/tabs_input_echo"
      android:layout_width="match_parent"
		android:layout_height="@dimen/dialog_header_height"
      android:background="@drawable/pos_input"
      android:gravity="center_vertical|center_horizontal"
      android:textColor="@color/black"
		android:textSize="@dimen/dialog_xlg_text"
		android:layout_margin="@dimen/dialog_margin"
 		app:layout_constraintTop_toTopOf="parent"/>

   <ScrollView
      android:id="@+id/select_scroller"
      android:layout_width="match_parent"
      android:layout_height="0dp"
		android:layout_marginTop="@dimen/dialog_padding"
		android:background="@color/transparent"
 		app:layout_constraintTop_toBottomOf="@+id/tabs_input_echo"
 		app:layout_constraintBottom_toBottomOf="parent">
	 
	 <LinearLayout
        android:id="@+id/tabs_layout_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
		  android:orientation="vertical"/>
	 
	</ScrollView>
  
</androidx.constraintlayout.widget.ConstraintLayout>
